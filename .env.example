# ===================================
# API Configuration
# ===================================

# For Docker Compose: Use service name as hostname
# The backend service in docker-compose.yml should be named 'backend'
# Example: VITE_API_BASE_URL=http://backend:8000/v1

# For Local Development: Use localhost
VITE_API_BASE_URL=http://localhost:8000/v1

# For Production: Use your domain
# VITE_API_BASE_URL=https://api.yourdomain.com/v1

# ===================================
# Environment Settings
# ===================================
VITE_ENV=development
VITE_DEBUG=true

# ===================================
# Optional Services
# ===================================
# Gemini API Key (if using local gemini service)
GEMINI_API_KEY=your_gemini_api_key_here

# Analytics
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=
